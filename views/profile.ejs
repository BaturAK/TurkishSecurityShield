<!-- Kullanıcı Profili Sayfası -->

<div class="container py-5">
  <div class="row">
    <div class="col-lg-4">
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-body text-center p-4">
          <% if (user.photoURL) { %>
            <img src="<%= user.photoURL %>" alt="<%= user.displayName || user.email %>" class="rounded-circle mb-3" width="100">
          <% } else { %>
            <div class="avatar-placeholder rounded-circle mb-3 mx-auto">
              <i class="fas fa-user fa-3x text-light"></i>
            </div>
          <% } %>
          
          <h4 class="mb-1"><%= user.displayName || 'Kullanıcı' %></h4>
          <p class="text-muted"><%= user.email %></p>
          
          <% if (user.isAdmin) { %>
            <span class="badge bg-primary mb-3">Admin</span>
          <% } %>
          
          <div class="mt-3">
            <a href="/dashboard/settings" class="btn btn-outline-primary">
              <i class="fas fa-cog me-2"></i> Ayarları Düzenle
            </a>
          </div>
        </div>
      </div>
      
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white border-0">
          <h5 class="mb-0">Hesap Bilgileri</h5>
        </div>
        <div class="card-body">
          <div class="d-flex justify-content-between py-2 border-bottom">
            <span class="text-muted">Hesap Tipi</span>
            <span class="fw-medium">Standart</span>
          </div>
          <div class="d-flex justify-content-between py-2 border-bottom">
            <span class="text-muted">Kayıt Tarihi</span>
            <span class="fw-medium"><%= new Date(user.createdAt || Date.now()).toLocaleDateString('tr-TR') %></span>
          </div>
          <div class="d-flex justify-content-between py-2">
            <span class="text-muted">Son Giriş</span>
            <span class="fw-medium"><%= new Date(user.lastLogin || Date.now()).toLocaleDateString('tr-TR') %></span>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-lg-8">
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Güvenlik Özeti</h5>
          <a href="/dashboard" class="btn btn-sm btn-primary">
            <i class="fas fa-tachometer-alt me-2"></i> Dashboard'a Git
          </a>
        </div>
        <div class="card-body">
          <div class="row g-4">
            <div class="col-md-4">
              <div class="p-3 rounded bg-light text-center">
                <i class="fas fa-shield-alt fa-2x text-primary mb-3"></i>
                <h4 class="mb-1">3</h4>
                <p class="text-muted mb-0">Son Tarama</p>
              </div>
            </div>
            <div class="col-md-4">
              <div class="p-3 rounded bg-light text-center">
                <i class="fas fa-bug fa-2x text-warning mb-3"></i>
                <h4 class="mb-1">1</h4>
                <p class="text-muted mb-0">Aktif Tehdit</p>
              </div>
            </div>
            <div class="col-md-4">
              <div class="p-3 rounded bg-light text-center">
                <i class="fas fa-broom fa-2x text-success mb-3"></i>
                <h4 class="mb-1">5</h4>
                <p class="text-muted mb-0">Temizlenen</p>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <div class="card border-0 shadow-sm mb-4">
        <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
          <h5 class="mb-0">Son Taramalar</h5>
          <a href="/dashboard/scans" class="btn btn-sm btn-outline-primary">
            Tümünü Gör
          </a>
        </div>
        <div class="card-body p-0">
          <div class="list-group list-group-flush">
            <!-- Örnek taramalar -->
            <div class="list-group-item d-flex justify-content-between align-items-center p-3">
              <div class="d-flex align-items-center">
                <div class="me-3">
                  <i class="fas fa-bolt fa-lg text-primary"></i>
                </div>
                <div>
                  <h6 class="mb-0">Hızlı Tarama</h6>
                  <small class="text-muted">2 gün önce</small>
                </div>
              </div>
              <span class="badge bg-success">Temiz</span>
            </div>
            <div class="list-group-item d-flex justify-content-between align-items-center p-3">
              <div class="d-flex align-items-center">
                <div class="me-3">
                  <i class="fas fa-shield-alt fa-lg text-success"></i>
                </div>
                <div>
                  <h6 class="mb-0">Tam Tarama</h6>
                  <small class="text-muted">1 hafta önce</small>
                </div>
              </div>
              <span class="badge bg-warning">1 Tehdit</span>
            </div>
            <div class="list-group-item d-flex justify-content-between align-items-center p-3">
              <div class="d-flex align-items-center">
                <div class="me-3">
                  <i class="fas fa-wifi fa-lg text-info"></i>
                </div>
                <div>
                  <h6 class="mb-0">Wi-Fi Tarama</h6>
                  <small class="text-muted">2 hafta önce</small>
                </div>
              </div>
              <span class="badge bg-success">Temiz</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
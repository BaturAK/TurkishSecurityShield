<section class="py-5">
  <div class="container">
    <!-- Karşılama Başlığı -->
    <div class="row mb-4">
      <div class="col-md-12">
        <h2 class="fw-bold">
          <% if (user && user.displayName) { %>
            Hoş geldin, <%= user.displayName %>!
          <% } else { %>
            Kullanıcı Paneli
          <% } %>
        </h2>
        <p class="text-muted">Cihazınızın güvenlik durumunu takip edin ve koruma özelliklerini yönetin.</p>
      </div>
    </div>
    
    <!-- Durum Özeti ve Hızlı İşlemler -->
    <div class="row mb-5">
      <!-- Sol Kolon: Güvenlik Durumu -->
      <div class="col-lg-8 mb-4 mb-lg-0">
        <div class="card border-0 shadow-sm mb-4">
          <div class="card-body p-4">
            <div class="d-flex align-items-center justify-content-between mb-3">
              <h4 class="card-title mb-0">Güvenlik Durumu</h4>
              <span class="badge bg-success fs-6 px-3 py-2">GÜVENLİ</span>
            </div>
            <div class="progress mb-3" style="height: 8px;">
              <div class="progress-bar bg-success" role="progressbar" style="width: 95%;" aria-valuenow="95" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <p class="text-muted mb-0">Son tarama: <span class="fw-medium"><%= lastScanDate ? lastScanDate.toLocaleString('tr-TR') : 'Henüz tarama yapılmadı' %></span></p>
          </div>
        </div>
        
        <div class="row g-3">
          <!-- Güvenlik İstatiği 1 -->
          <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
              <div class="card-body p-3 text-center">
                <div class="feature-icon bg-primary rounded-circle mx-auto mb-3 d-inline-flex">
                  <i class="fas fa-shield-alt text-white"></i>
                </div>
                <h5 class="card-title mb-0">Taramalar</h5>
                <p class="display-6 fw-bold mb-0"><%= stats.scanCount || 0 %></p>
                <p class="text-muted small mb-0">Toplam</p>
              </div>
            </div>
          </div>
          
          <!-- Güvenlik İstatiği 2 -->
          <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
              <div class="card-body p-3 text-center">
                <div class="feature-icon bg-danger rounded-circle mx-auto mb-3 d-inline-flex">
                  <i class="fas fa-bug text-white"></i>
                </div>
                <h5 class="card-title mb-0">Tehditler</h5>
                <p class="display-6 fw-bold mb-0"><%= stats.threatCount || 0 %></p>
                <p class="text-muted small mb-0">Tespit Edilen</p>
              </div>
            </div>
          </div>
          
          <!-- Güvenlik İstatiği 3 -->
          <div class="col-md-4">
            <div class="card border-0 shadow-sm h-100">
              <div class="card-body p-3 text-center">
                <div class="feature-icon bg-warning rounded-circle mx-auto mb-3 d-inline-flex">
                  <i class="fas fa-exclamation-triangle text-white"></i>
                </div>
                <h5 class="card-title mb-0">Aktif</h5>
                <p class="display-6 fw-bold mb-0"><%= stats.activeThreatsCount || 0 %></p>
                <p class="text-muted small mb-0">Temizlenmemiş</p>
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Sağ Kolon: Hızlı İşlemler -->
      <div class="col-lg-4">
        <div class="card border-0 shadow-sm h-100">
          <div class="card-header bg-white py-3">
            <h4 class="card-title mb-0">Hızlı İşlemler</h4>
          </div>
          <div class="card-body p-4">
            <div class="d-grid gap-3">
              <a href="/scan/quick" class="btn btn-primary d-flex align-items-center justify-content-between">
                <span><i class="fas fa-bolt me-2"></i> Hızlı Tarama</span>
                <i class="fas fa-chevron-right ms-2"></i>
              </a>
              <a href="/scan/full" class="btn btn-outline-primary d-flex align-items-center justify-content-between">
                <span><i class="fas fa-shield-alt me-2"></i> Tam Tarama</span>
                <i class="fas fa-chevron-right ms-2"></i>
              </a>
              <a href="/scan/wifi" class="btn btn-outline-success d-flex align-items-center justify-content-between">
                <span><i class="fas fa-wifi me-2"></i> WiFi Güvenliği</span>
                <i class="fas fa-chevron-right ms-2"></i>
              </a>
              <a href="/scan/qr" class="btn btn-outline-danger d-flex align-items-center justify-content-between">
                <span><i class="fas fa-qrcode me-2"></i> QR Taraması</span>
                <i class="fas fa-chevron-right ms-2"></i>
              </a>
              <a href="/optimize" class="btn btn-outline-info d-flex align-items-center justify-content-between">
                <span><i class="fas fa-tachometer-alt me-2"></i> Sistemi Optimize Et</span>
                <i class="fas fa-chevron-right ms-2"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Son Taramalar ve Tehditler -->
    <div class="row">
      <!-- Sol Kolon: Son Taramalar -->
      <div class="col-lg-6 mb-4">
        <div class="card border-0 shadow-sm h-100">
          <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h4 class="card-title mb-0">Son Taramalar</h4>
            <a href="/scans" class="btn btn-sm btn-outline-primary">Tümü</a>
          </div>
          <div class="card-body p-0">
            <% if (recentScans && recentScans.length > 0) { %>
              <div class="list-group list-group-flush">
                <% recentScans.forEach(scan => { %>
                  <a href="/scan/<%= scan.id %>" class="list-group-item list-group-item-action d-flex justify-content-between align-items-center px-4 py-3">
                    <div>
                      <div>
                        <% if (scan.type === 'QUICK') { %>
                          <span class="badge bg-primary me-2">Hızlı Tarama</span>
                        <% } else if (scan.type === 'FULL') { %>
                          <span class="badge bg-info me-2">Tam Tarama</span>
                        <% } else if (scan.type === 'WIFI') { %>
                          <span class="badge bg-success me-2">WiFi Taraması</span>
                        <% } else if (scan.type === 'QR') { %>
                          <span class="badge bg-warning me-2">QR Taraması</span>
                        <% } else { %>
                          <span class="badge bg-secondary me-2"><%= scan.type %></span>
                        <% } %>
                        
                        <% if (scan.getStatus() === 'RUNNING') { %>
                          <span class="badge bg-warning">Devam Ediyor</span>
                        <% } else { %>
                          <span class="badge bg-success">Tamamlandı</span>
                        <% } %>
                      </div>
                      <small class="text-muted"><%= scan.startTime.toLocaleString('tr-TR') %></small>
                    </div>
                    
                    <div>
                      <% if (scan.threatsFound.length > 0) { %>
                        <span class="badge bg-danger fs-6"><%= scan.threatsFound.length %> Tehdit</span>
                      <% } else { %>
                        <span class="badge bg-success fs-6">Temiz</span>
                      <% } %>
                      <i class="fas fa-chevron-right ms-3 text-muted"></i>
                    </div>
                  </a>
                <% }); %>
              </div>
            <% } else { %>
              <div class="text-center py-5">
                <i class="fas fa-history fa-3x text-muted mb-3"></i>
                <h5>Henüz Tarama Yapılmadı</h5>
                <p class="text-muted">Hızlı tarama yaparak cihazınızı kontrol edin.</p>
                <a href="/scan/quick" class="btn btn-primary">
                  <i class="fas fa-bolt me-2"></i> Hızlı Tarama
                </a>
              </div>
            <% } %>
          </div>
        </div>
      </div>
      
      <!-- Sağ Kolon: Aktif Tehditler -->
      <div class="col-lg-6 mb-4">
        <div class="card border-0 shadow-sm h-100">
          <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h4 class="card-title mb-0">Aktif Tehditler</h4>
            <a href="/threats" class="btn btn-sm btn-outline-primary">Tümü</a>
          </div>
          <div class="card-body p-0">
            <% if (activeThreats && activeThreats.length > 0) { %>
              <div class="list-group list-group-flush">
                <% activeThreats.forEach(threat => { %>
                  <div class="list-group-item px-4 py-3">
                    <div class="d-flex justify-content-between align-items-center mb-2">
                      <h5 class="mb-0"><%= threat.name %></h5>
                      <% if (threat.severity === 'HIGH') { %>
                        <span class="badge bg-danger">Yüksek Risk</span>
                      <% } else if (threat.severity === 'MEDIUM') { %>
                        <span class="badge bg-warning">Orta Risk</span>
                      <% } else { %>
                        <span class="badge bg-info">Düşük Risk</span>
                      <% } %>
                    </div>
                    <p class="text-muted small mb-2"><%= threat.description %></p>
                    <div class="d-flex justify-content-between align-items-center">
                      <small class="text-muted"><i class="fas fa-calendar-alt me-1"></i> <%= threat.detectionDate.toLocaleString('tr-TR') %></small>
                      <button class="btn btn-sm btn-success clean-threat-btn" data-threat-id="<%= threat.id %>">
                        <i class="fas fa-broom me-1"></i> Temizle
                      </button>
                    </div>
                  </div>
                <% }); %>
              </div>
            <% } else { %>
              <div class="text-center py-5">
                <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                <h5>Aktif Tehdit Yok</h5>
                <p class="text-muted">Tüm tespit edilen tehditler temizlendi.</p>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Koruma Özellikleri -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="card border-0 shadow-sm">
          <div class="card-header bg-white py-3">
            <h4 class="card-title mb-0">Koruma Özellikleri</h4>
          </div>
          <div class="card-body p-4">
            <div class="row g-4">
              <!-- Koruma Özelliği 1 -->
              <div class="col-md-6">
                <div class="form-check form-switch d-flex justify-content-between">
                  <div>
                    <label class="form-check-label fw-medium" for="realTimeProtection">
                      <i class="fas fa-shield-alt text-primary me-2"></i> Gerçek Zamanlı Koruma
                    </label>
                    <p class="text-muted small ms-4 mb-0">Yeni yüklenen uygulamaları ve dosyaları otomatik olarak tarar.</p>
                  </div>
                  <input class="form-check-input" type="checkbox" role="switch" id="realTimeProtection" checked>
                </div>
              </div>
              
              <!-- Koruma Özelliği 2 -->
              <div class="col-md-6">
                <div class="form-check form-switch d-flex justify-content-between">
                  <div>
                    <label class="form-check-label fw-medium" for="wifiSecurity">
                      <i class="fas fa-wifi text-success me-2"></i> WiFi Güvenliği
                    </label>
                    <p class="text-muted small ms-4 mb-0">Bağlandığınız ağları sürekli izler ve tehditleri tespit eder.</p>
                  </div>
                  <input class="form-check-input" type="checkbox" role="switch" id="wifiSecurity" checked>
                </div>
              </div>
              
              <!-- Koruma Özelliği 3 -->
              <div class="col-md-6">
                <div class="form-check form-switch d-flex justify-content-between">
                  <div>
                    <label class="form-check-label fw-medium" for="appLock">
                      <i class="fas fa-lock text-warning me-2"></i> Uygulama Kilidi
                    </label>
                    <p class="text-muted small ms-4 mb-0">Hassas uygulamalara erişimi şifre veya biyometrik kimlik ile korur.</p>
                  </div>
                  <input class="form-check-input" type="checkbox" role="switch" id="appLock" checked>
                </div>
              </div>
              
              <!-- Koruma Özelliği 4 -->
              <div class="col-md-6">
                <div class="form-check form-switch d-flex justify-content-between">
                  <div>
                    <label class="form-check-label fw-medium" for="vpnService">
                      <i class="fas fa-globe text-secondary me-2"></i> VPN Hizmeti
                    </label>
                    <p class="text-muted small ms-4 mb-0">İnternet trafiğinizi şifreler ve gizliliğinizi korur.</p>
                  </div>
                  <input class="form-check-input" type="checkbox" role="switch" id="vpnService">
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Tehdit temizleme butonları
    const cleanThreatBtns = document.querySelectorAll('.clean-threat-btn');
    if (cleanThreatBtns.length > 0) {
      cleanThreatBtns.forEach(btn => {
        btn.addEventListener('click', function() {
          const threatId = this.getAttribute('data-threat-id');
          this.disabled = true;
          this.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i> İşleniyor...';
          
          fetch(`/threat/${threatId}/clean`, {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            }
          })
          .then(response => response.json())
          .then(data => {
            if (data.success) {
              alert('Tehdit başarıyla temizlendi!');
              location.reload();
            } else {
              alert('Tehdit temizlenirken bir hata oluştu: ' + data.message);
              this.disabled = false;
              this.innerHTML = '<i class="fas fa-broom me-1"></i> Temizle';
            }
          })
          .catch(error => {
            console.error('Tehdit temizleme hatası:', error);
            alert('Tehdit temizlenirken bir hata oluştu.');
            this.disabled = false;
            this.innerHTML = '<i class="fas fa-broom me-1"></i> Temizle';
          });
        });
      });
    }
    
    // Koruma özellikleri toggle
    const protectionSwitches = document.querySelectorAll('.form-check-input[type="checkbox"]');
    if (protectionSwitches.length > 0) {
      protectionSwitches.forEach(switchEl => {
        switchEl.addEventListener('change', function() {
          const featureId = this.id;
          const isEnabled = this.checked;
          
          fetch('/settings/toggle-feature', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            },
            body: JSON.stringify({
              featureId: featureId,
              isEnabled: isEnabled
            })
          })
          .then(response => response.json())
          .then(data => {
            if (!data.success) {
              alert('Özellik durumu güncellenirken bir hata oluştu: ' + data.message);
              this.checked = !isEnabled; // Değişikliği geri al
            }
          })
          .catch(error => {
            console.error('Özellik güncelleme hatası:', error);
            alert('Özellik durumu güncellenirken bir hata oluştu.');
            this.checked = !isEnabled; // Değişikliği geri al
          });
        });
      });
    }
  });
</script>
<!-- Admin Dashboard İçeriği -->
<div class="container-fluid py-4">
  <!-- Başlık ve İşlemler -->
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0"><i class="fas fa-tachometer-alt me-2"></i> Admin Kontrol Paneli</h1>
    
    <div class="d-flex gap-2">
      <div class="dropdown">
        <button class="btn btn-primary dropdown-toggle" type="button" id="createTestData" data-bs-toggle="dropdown" aria-expanded="false">
          <i class="fas fa-plus-circle me-1"></i> Test Verisi Oluştur
        </button>
        <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="createTestData">
          <li>
            <form action="/admin/create-test-threat" method="POST">
              <button type="submit" class="dropdown-item">
                <i class="fas fa-bug me-2"></i> Test Tehdidi Oluştur
              </button>
            </form>
          </li>
          <li>
            <form action="/admin/create-test-scan" method="POST">
              <input type="hidden" name="type" value="QUICK">
              <button type="submit" class="dropdown-item">
                <i class="fas fa-shield-alt me-2"></i> Test Taraması Oluştur
              </button>
            </form>
          </li>
        </ul>
      </div>
      
      <a href="/admin/stats" class="btn btn-outline-primary">
        <i class="fas fa-chart-line me-1"></i> Detaylı İstatistikler
      </a>
    </div>
  </div>
  
  <!-- İstatistik Kartları -->
  <div class="row g-4 mb-4">
    <div class="col-xl-3 col-md-6">
      <div class="card stat-card border-left-primary h-100">
        <div class="card-body">
          <div class="row align-items-center">
            <div class="col">
              <h5 class="text-primary fw-bold text-uppercase mb-1">Kullanıcılar</h5>
              <h2 class="mb-0 fw-bold"><%= stats.userCount %></h2>
            </div>
            <div class="col-auto">
              <i class="fas fa-users fa-2x text-gray-300"></i>
            </div>
          </div>
          <div class="mt-2 small text-muted">
            <a href="/admin/users" class="text-decoration-none">
              <i class="fas fa-arrow-right me-1"></i> Kullanıcıları Görüntüle
            </a>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
      <div class="card stat-card border-left-success h-100">
        <div class="card-body">
          <div class="row align-items-center">
            <div class="col">
              <h5 class="text-success fw-bold text-uppercase mb-1">Toplam Taramalar</h5>
              <h2 class="mb-0 fw-bold"><%= stats.scanCount %></h2>
            </div>
            <div class="col-auto">
              <i class="fas fa-shield-alt fa-2x text-gray-300"></i>
            </div>
          </div>
          <div class="mt-2 small text-muted">
            <a href="/admin/scans" class="text-decoration-none">
              <i class="fas fa-arrow-right me-1"></i> Taramaları Görüntüle
            </a>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
      <div class="card stat-card border-left-warning h-100">
        <div class="card-body">
          <div class="row align-items-center">
            <div class="col">
              <h5 class="text-warning fw-bold text-uppercase mb-1">Aktif Tehditler</h5>
              <h2 class="mb-0 fw-bold"><%= stats.activeThreats %></h2>
            </div>
            <div class="col-auto">
              <i class="fas fa-bug fa-2x text-gray-300"></i>
            </div>
          </div>
          <div class="mt-2 small text-muted">
            <a href="/admin/threats" class="text-decoration-none">
              <i class="fas fa-arrow-right me-1"></i> Tehditleri Görüntüle
            </a>
          </div>
        </div>
      </div>
    </div>
    
    <div class="col-xl-3 col-md-6">
      <div class="card stat-card border-left-info h-100">
        <div class="card-body">
          <div class="row align-items-center">
            <div class="col">
              <h5 class="text-info fw-bold text-uppercase mb-1">Temizlenen Tehditler</h5>
              <h2 class="mb-0 fw-bold"><%= stats.cleanedThreats %></h2>
            </div>
            <div class="col-auto">
              <i class="fas fa-broom fa-2x text-gray-300"></i>
            </div>
          </div>
          <div class="mt-2 small text-muted">
            <span class="text-success">
              <i class="fas fa-check-circle me-1"></i> Güvenli
            </span>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- İçerik Bölümü -->
  <div class="row">
    <!-- Son Kullanıcılar -->
    <div class="col-xl-6 mb-4">
      <div class="card shadow h-100">
        <div class="card-header bg-white py-3 d-flex align-items-center justify-content-between">
          <h6 class="m-0 fw-bold text-primary">Son Kayıt Olan Kullanıcılar</h6>
          <a href="/admin/users" class="btn btn-sm btn-primary">
            <i class="fas fa-users me-1"></i> Tümünü Gör
          </a>
        </div>
        
        <div class="card-body">
          <% if (recentUsers && recentUsers.length > 0) { %>
            <div class="table-responsive">
              <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                  <tr>
                    <th>Kullanıcı</th>
                    <th>E-posta</th>
                    <th>Kayıt Tarihi</th>
                    <th>İşlemler</th>
                  </tr>
                </thead>
                <tbody>
                  <% recentUsers.forEach(user => { %>
                    <tr>
                      <td>
                        <div class="d-flex align-items-center">
                          <% if (user.photoURL) { %>
                            <img src="<%= user.photoURL %>" class="rounded-circle me-2" width="32" height="32" alt="<%= user.displayName %>">
                          <% } else { %>
                            <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2" style="width: 32px; height: 32px;">
                              <i class="fas fa-user"></i>
                            </div>
                          <% } %>
                          <div>
                            <div class="fw-bold"><%= user.displayName || 'İsimsiz Kullanıcı' %></div>
                            <% if (user.isAdmin) { %>
                              <span class="badge bg-primary">Admin</span>
                            <% } %>
                          </div>
                        </div>
                      </td>
                      <td><%= user.email %></td>
                      <td><%= new Date(user.createdAt).toLocaleString('tr-TR') %></td>
                      <td>
                        <a href="/admin/users/<%= user.id %>" class="btn btn-sm btn-outline-primary">
                          <i class="fas fa-eye"></i>
                        </a>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          <% } else { %>
            <div class="text-center p-4">
              <i class="fas fa-users fa-3x text-muted mb-3"></i>
              <p>Henüz kayıtlı kullanıcı bulunmuyor.</p>
            </div>
          <% } %>
        </div>
      </div>
    </div>
    
    <!-- Son Taramalar -->
    <div class="col-xl-6 mb-4">
      <div class="card shadow h-100">
        <div class="card-header bg-white py-3 d-flex align-items-center justify-content-between">
          <h6 class="m-0 fw-bold text-primary">Son Taramalar</h6>
          <a href="/admin/scans" class="btn btn-sm btn-primary">
            <i class="fas fa-shield-alt me-1"></i> Tümünü Gör
          </a>
        </div>
        
        <div class="card-body">
          <% if (recentScans && recentScans.length > 0) { %>
            <div class="table-responsive">
              <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                  <tr>
                    <th>Tarama ID</th>
                    <th>Tipi</th>
                    <th>Tarih</th>
                    <th>Tehditler</th>
                    <th>Durum</th>
                  </tr>
                </thead>
                <tbody>
                  <% recentScans.forEach(scan => { %>
                    <tr>
                      <td><small class="text-muted"><%= scan.id.substring(0, 8) %>...</small></td>
                      <td>
                        <% if (scan.type === 'QUICK') { %>
                          <span class="badge bg-primary">Hızlı Tarama</span>
                        <% } else if (scan.type === 'FULL') { %>
                          <span class="badge bg-info">Tam Tarama</span>
                        <% } else if (scan.type === 'WIFI') { %>
                          <span class="badge bg-warning">WiFi Tarama</span>
                        <% } else if (scan.type === 'QR') { %>
                          <span class="badge bg-danger">QR Tarama</span>
                        <% } else { %>
                          <span class="badge bg-secondary"><%= scan.type %></span>
                        <% } %>
                      </td>
                      <td><%= new Date(scan.startTime).toLocaleString('tr-TR') %></td>
                      <td>
                        <% if (scan.threatsFound && scan.threatsFound.length > 0) { %>
                          <span class="badge bg-danger"><%= scan.threatsFound.length %></span>
                        <% } else { %>
                          <span class="badge bg-success">0</span>
                        <% } %>
                      </td>
                      <td>
                        <% if (scan.getStatus() === 'COMPLETED') { %>
                          <span class="badge bg-success">Tamamlandı</span>
                        <% } else if (scan.getStatus() === 'RUNNING') { %>
                          <span class="badge bg-warning">Devam Ediyor</span>
                        <% } else { %>
                          <span class="badge bg-danger">Başarısız</span>
                        <% } %>
                      </td>
                    </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
          <% } else { %>
            <div class="text-center p-4">
              <i class="fas fa-shield-alt fa-3x text-muted mb-3"></i>
              <p>Henüz tarama bulunmuyor.</p>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Sistem Durumu -->
  <div class="row">
    <div class="col-12 mb-4">
      <div class="card shadow">
        <div class="card-header bg-white py-3">
          <h6 class="m-0 fw-bold text-primary">Sistem Durumu</h6>
        </div>
        
        <div class="card-body">
          <div class="row align-items-center">
            <div class="col-md-6">
              <div class="system-status mb-4">
                <p class="mb-1">Veritabanı Bağlantısı</p>
                <div class="progress">
                  <div class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100">Bağlı</div>
                </div>
              </div>
              
              <div class="system-status mb-4">
                <p class="mb-1">Disk Kullanımı</p>
                <div class="progress">
                  <div class="progress-bar bg-info" role="progressbar" style="width: 35%" aria-valuenow="35" aria-valuemin="0" aria-valuemax="100">35%</div>
                </div>
              </div>
              
              <div class="system-status mb-4">
                <p class="mb-1">Bellek Kullanımı</p>
                <div class="progress">
                  <div class="progress-bar bg-warning" role="progressbar" style="width: 68%" aria-valuenow="68" aria-valuemin="0" aria-valuemax="100">68%</div>
                </div>
              </div>
              
              <div class="system-status">
                <p class="mb-1">CPU Kullanımı</p>
                <div class="progress">
                  <div class="progress-bar bg-primary" role="progressbar" style="width: 42%" aria-valuenow="42" aria-valuemin="0" aria-valuemax="100">42%</div>
                </div>
              </div>
            </div>
            
            <div class="col-md-6">
              <div class="card border-0 bg-light rounded h-100">
                <div class="card-body">
                  <h5 class="card-title mb-3">Sistem Özeti</h5>
                  <ul class="list-unstyled">
                    <li class="mb-2">
                      <span class="fw-bold me-1"><i class="fas fa-server text-primary me-2"></i> Sunucu:</span>
                      NodeJS Web Server
                    </li>
                    <li class="mb-2">
                      <span class="fw-bold me-1"><i class="fas fa-database text-primary me-2"></i> Veritabanı:</span>
                      MongoDB
                    </li>
                    <li class="mb-2">
                      <span class="fw-bold me-1"><i class="fas fa-calendar text-primary me-2"></i> Çalışma Süresi:</span>
                      12 saat 34 dakika
                    </li>
                    <li class="mb-2">
                      <span class="fw-bold me-1"><i class="fas fa-history text-primary me-2"></i> Son Yedekleme:</span>
                      Bugün 08:30
                    </li>
                    <li>
                      <span class="fw-bold me-1"><i class="fas fa-shield-alt text-primary me-2"></i> Güvenlik Durumu:</span>
                      <span class="badge bg-success">Güvenli</span>
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  /* Admin Dashboard Stilleri */
  .border-left-primary {
    border-left: 4px solid #4e73df !important;
  }
  
  .border-left-success {
    border-left: 4px solid #1cc88a !important;
  }
  
  .border-left-warning {
    border-left: 4px solid #f6c23e !important;
  }
  
  .border-left-info {
    border-left: 4px solid #36b9cc !important;
  }
  
  .text-gray-300 {
    color: #dddfeb !important;
  }
</style>
<section class="py-5">
  <div class="container">
    <!-- Admin Panel Başlık -->
    <div class="row mb-4">
      <div class="col-md-8">
        <h1 class="fw-bold mb-2">Admin Panel</h1>
        <p class="text-muted">AntiVirüs Uygulaması yönetim paneline hoş geldiniz.</p>
      </div>
      <div class="col-md-4 text-md-end">
        <div class="btn-group">
          <button type="button" class="btn btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="fas fa-cog me-2"></i> İşlemler
          </button>
          <ul class="dropdown-menu dropdown-menu-end">
            <li><a class="dropdown-item" href="/admin/users"><i class="fas fa-users me-2"></i> Kullanıcı Yönetimi</a></li>
            <li><a class="dropdown-item" href="/admin/threats"><i class="fas fa-bug me-2"></i> Tehdit Yönetimi</a></li>
            <li><a class="dropdown-item" href="/admin/scans"><i class="fas fa-shield-alt me-2"></i> Tarama Sonuçları</a></li>
            <li><hr class="dropdown-divider"></li>
            <li><button class="dropdown-item text-success" id="generateTestDataBtn"><i class="fas fa-database me-2"></i> Test Verisi Oluştur</button></li>
          </ul>
        </div>
      </div>
    </div>

    <!-- İstatistik Kartları -->
    <div class="row mb-5">
      <div class="col-md-3 mb-4">
        <div class="card border-0 shadow-sm h-100">
          <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <div class="feature-icon bg-primary">
                <i class="fas fa-users text-white"></i>
              </div>
              <h2 class="fw-bold text-end mb-0"><%= stats.userCount %></h2>
            </div>
            <h5 class="card-title">Kullanıcılar</h5>
            <p class="card-text text-muted small">Toplam kayıtlı kullanıcı sayısı</p>
            <a href="/admin/users" class="stretched-link"></a>
          </div>
        </div>
      </div>
      
      <div class="col-md-3 mb-4">
        <div class="card border-0 shadow-sm h-100">
          <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <div class="feature-icon bg-danger">
                <i class="fas fa-bug text-white"></i>
              </div>
              <h2 class="fw-bold text-end mb-0"><%= stats.threatCount %></h2>
            </div>
            <h5 class="card-title">Tehditler</h5>
            <p class="card-text text-muted small">Tespit edilen toplam tehdit sayısı</p>
            <a href="/admin/threats" class="stretched-link"></a>
          </div>
        </div>
      </div>
      
      <div class="col-md-3 mb-4">
        <div class="card border-0 shadow-sm h-100">
          <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <div class="feature-icon bg-success">
                <i class="fas fa-shield-alt text-white"></i>
              </div>
              <h2 class="fw-bold text-end mb-0"><%= stats.scanCount %></h2>
            </div>
            <h5 class="card-title">Taramalar</h5>
            <p class="card-text text-muted small">Gerçekleştirilen toplam tarama sayısı</p>
            <a href="/admin/scans" class="stretched-link"></a>
          </div>
        </div>
      </div>
      
      <div class="col-md-3 mb-4">
        <div class="card border-0 shadow-sm h-100">
          <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-3">
              <div class="feature-icon bg-warning">
                <i class="fas fa-exclamation-triangle text-white"></i>
              </div>
              <h2 class="fw-bold text-end mb-0"><%= stats.activeThreatsCount %></h2>
            </div>
            <h5 class="card-title">Aktif Tehditler</h5>
            <p class="card-text text-muted small">Temizlenmemiş aktif tehdit sayısı</p>
            <a href="/admin/threats?filter=active" class="stretched-link"></a>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Son Taramalar -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="card border-0 shadow-sm">
          <div class="card-header bg-white py-3 d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Son Tarama Sonuçları</h5>
            <a href="/admin/scans" class="btn btn-sm btn-outline-primary">Tümünü Görüntüle</a>
          </div>
          <div class="card-body p-0">
            <% if (recentScans && recentScans.length > 0) { %>
              <div class="table-responsive">
                <table class="table table-hover">
                  <thead>
                    <tr>
                      <th>Tarama ID</th>
                      <th>Kullanıcı</th>
                      <th>Tarama Tipi</th>
                      <th>Tarih</th>
                      <th>Durum</th>
                      <th>Tehdit</th>
                      <th>İşlemler</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% recentScans.forEach(scan => { %>
                      <tr>
                        <td><code><%= scan.id.substring(0, 8) %>...</code></td>
                        <td>
                          <% if (scan.userId) { %>
                            <i class="fas fa-user me-1"></i> <%= scan.userId.substring(0, 8) %>...
                          <% } else { %>
                            <span class="badge bg-secondary">Sistem</span>
                          <% } %>
                        </td>
                        <td>
                          <% if (scan.type === 'QUICK') { %>
                            <span class="badge bg-primary">Hızlı Tarama</span>
                          <% } else if (scan.type === 'FULL') { %>
                            <span class="badge bg-info">Tam Tarama</span>
                          <% } else if (scan.type === 'WIFI') { %>
                            <span class="badge bg-success">WiFi Taraması</span>
                          <% } else if (scan.type === 'QR') { %>
                            <span class="badge bg-warning">QR Taraması</span>
                          <% } else { %>
                            <span class="badge bg-secondary"><%= scan.type %></span>
                          <% } %>
                        </td>
                        <td><%= scan.startTime.toLocaleString('tr-TR') %></td>
                        <td>
                          <% if (scan.getStatus() === 'RUNNING') { %>
                            <span class="badge bg-warning">Devam Ediyor</span>
                          <% } else { %>
                            <span class="badge bg-success">Tamamlandı</span>
                          <% } %>
                        </td>
                        <td>
                          <% if (scan.threatsFound.length > 0) { %>
                            <span class="badge bg-danger"><%= scan.threatsFound.length %> Tehdit</span>
                          <% } else { %>
                            <span class="badge bg-success">Temiz</span>
                          <% } %>
                        </td>
                        <td>
                          <a href="/scan/<%= scan.id %>" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-eye"></i> Detaylar
                          </a>
                        </td>
                      </tr>
                    <% }); %>
                  </tbody>
                </table>
              </div>
            <% } else { %>
              <div class="text-center py-5">
                <i class="fas fa-history fa-3x text-muted mb-3"></i>
                <h5>Henüz Tarama Yapılmadı</h5>
                <p class="text-muted">Sistem henüz herhangi bir tarama kaydı bulamadı.</p>
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Test verisi oluştur butonu
    const generateTestDataBtn = document.getElementById('generateTestDataBtn');
    if (generateTestDataBtn) {
      generateTestDataBtn.addEventListener('click', function() {
        if (confirm('Test verisi oluşturmak istediğinize emin misiniz?')) {
          this.disabled = true;
          this.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i> İşleniyor...';
          
          fetch('/admin/generate-test-data', {
            method: 'POST',
            headers: {
              'Content-Type': 'application/json',
            }
          })
          .then(response => response.json())
          .then(data => {
            if (data.success) {
              alert(`Test verileri başarıyla oluşturuldu!\n${data.counts.users} kullanıcı, ${data.counts.threats} tehdit ve ${data.counts.scans} tarama kaydı eklendi.`);
              location.reload();
            } else {
              alert('Test verileri oluşturulurken bir hata oluştu: ' + data.message);
              this.disabled = false;
              this.innerHTML = '<i class="fas fa-database me-2"></i> Test Verisi Oluştur';
            }
          })
          .catch(error => {
            console.error('Test verisi hatası:', error);
            alert('Test verileri oluşturulurken bir hata oluştu.');
            this.disabled = false;
            this.innerHTML = '<i class="fas fa-database me-2"></i> Test Verisi Oluştur';
          });
        }
      });
    }
  });
</script>
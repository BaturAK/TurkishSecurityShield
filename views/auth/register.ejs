<section class="py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm border-0">
          <div class="card-body p-4 p-md-5">
            <div class="text-center mb-4">
              <i class="fas fa-user-plus fa-3x text-primary mb-3"></i>
              <h2 class="fw-bold">Hesap Oluştur</h2>
              <p class="text-muted">Ücretsiz hesap oluşturun ve cihazlarınızı korumaya başlayın</p>
            </div>
            
            <% if (locals.error) { %>
              <div class="alert alert-danger mb-4">
                <%= error %>
              </div>
            <% } %>
            
            <form action="/auth/register" method="POST">
              <div class="mb-3">
                <label for="name" class="form-label">Adınız Soyadınız</label>
                <input type="text" class="form-control" id="name" name="name" value="<%= locals.name || '' %>" required>
              </div>
              
              <div class="mb-3">
                <label for="email" class="form-label">E-posta Adresi</label>
                <input type="email" class="form-control" id="email" name="email" value="<%= locals.email || '' %>" required>
                <div class="form-text">E-posta adresiniz oturum açmak için kullanılacaktır.</div>
              </div>
              
              <div class="mb-3">
                <label for="password" class="form-label">Şifre</label>
                <input type="password" class="form-control" id="password" name="password" required>
                <div class="form-text">Şifreniz en az 6 karakter olmalıdır.</div>
              </div>
              
              <div class="mb-4">
                <label for="passwordConfirm" class="form-label">Şifre Onayı</label>
                <input type="password" class="form-control" id="passwordConfirm" name="passwordConfirm" required>
              </div>
              
              <div class="form-check mb-4">
                <input class="form-check-input" type="checkbox" id="termsAgree" name="termsAgree" required>
                <label class="form-check-label" for="termsAgree">
                  <a href="#" class="text-decoration-none">Kullanım Şartları</a> ve <a href="#" class="text-decoration-none">Gizlilik Politikası</a>'nı kabul ediyorum.
                </label>
              </div>
              
              <div class="d-grid mb-4">
                <button type="submit" class="btn btn-primary btn-lg">Kayıt Ol</button>
              </div>
            </form>
            
            <div class="text-center">
              <p class="text-muted">Veya şununla kayıt olun</p>
              <div class="d-flex justify-content-center gap-3 mb-4">
                <a href="/auth/google" class="btn btn-outline-danger">
                  <i class="fab fa-google me-2"></i> Google
                </a>
              </div>
              <p class="mb-0">
                Zaten hesabınız var mı? <a href="/auth/login" class="text-decoration-none">Giriş Yap</a>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
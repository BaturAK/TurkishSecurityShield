<!-- Kayıt Sayfası -->

<section class="py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="card border-0 shadow-sm">
          <div class="card-body p-4 p-md-5">
            <div class="text-center mb-4">
              <img src="/img/logo.svg" alt="AntiVirüs" height="60" class="mb-3">
              <h2 class="h3">Hesap Oluştur</h2>
              <p class="text-muted">AntiVirüs ile cihazınızı korumaya başlayın</p>
            </div>
            
            <% if (error) { %>
              <div class="alert alert-danger" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i> <%= error %>
              </div>
            <% } %>
            
            <form action="/auth/register" method="POST">
              <div class="mb-3">
                <label for="displayName" class="form-label">Ad Soyad</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="fas fa-user"></i></span>
                  <input type="text" class="form-control" id="displayName" name="displayName" placeholder="Adınız ve soyadınızı girin">
                </div>
              </div>
              
              <div class="mb-3">
                <label for="email" class="form-label">E-posta Adresi</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                  <input type="email" class="form-control" id="email" name="email" placeholder="E-posta adresinizi girin" required>
                </div>
              </div>
              
              <div class="mb-3">
                <label for="password" class="form-label">Şifre</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="fas fa-lock"></i></span>
                  <input type="password" class="form-control" id="password" name="password" placeholder="Şifrenizi girin" required>
                </div>
                <small class="form-text text-muted">Şifreniz en az 8 karakter olmalıdır.</small>
              </div>
              
              <div class="mb-3">
                <label for="confirmPassword" class="form-label">Şifre (Tekrar)</label>
                <div class="input-group">
                  <span class="input-group-text"><i class="fas fa-lock"></i></span>
                  <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" placeholder="Şifrenizi tekrar girin" required>
                </div>
              </div>
              
              <div class="mb-3 form-check">
                <input type="checkbox" class="form-check-input" id="agreeTerms" name="agreeTerms" required>
                <label class="form-check-label" for="agreeTerms">
                  <a href="/terms" class="text-decoration-none">Kullanım Şartlarını</a> ve 
                  <a href="/privacy" class="text-decoration-none">Gizlilik Politikasını</a> kabul ediyorum
                </label>
              </div>
              
              <div class="d-grid mb-3">
                <button type="submit" class="btn btn-primary btn-lg">
                  <i class="fas fa-user-plus me-2"></i> Hesap Oluştur
                </button>
              </div>
              
              <hr class="my-4">
              
              <div class="text-center mb-3">
                <span class="text-muted">veya şununla devam et</span>
              </div>
              
              <div class="d-grid">
                <button type="button" class="btn btn-outline-dark">
                  <i class="fab fa-google me-2"></i> Google ile Kaydol
                </button>
              </div>
            </form>
            
            <div class="text-center mt-4">
              <p class="mb-0">Zaten hesabınız var mı? <a href="/auth/login" class="fw-semibold text-decoration-none">Giriş yapın</a></p>
            </div>
          </div>
        </div>
        
        <div class="mt-4 text-center">
          <p class="small text-muted">
            Kaydolarak <a href="/terms" class="text-decoration-none">Kullanım Şartlarımızı</a> ve 
            <a href="/privacy" class="text-decoration-none">Gizlilik Politikamızı</a> kabul etmiş olursunuz.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <div class="alert alert-info" role="alert">
        <h5><i class="fas fa-info-circle me-2"></i> Demo Bilgisi</h5>
        <p class="mb-0">Bu bir demo uygulamasıdır. Kayıt işlemi gerçek bir veritabanına yapılır, ancak güvenlik nedeniyle şifreler "password" olarak sabitlenmiştir.</p>
      </div>
    </div>
  </div>
</div>
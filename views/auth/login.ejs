<section class="py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm border-0">
          <div class="card-body p-4 p-md-5">
            <div class="text-center mb-4">
              <i class="fas fa-shield-virus fa-3x text-primary mb-3"></i>
              <h2 class="fw-bold">Giriş Yap</h2>
              <p class="text-muted">Hesabınıza erişin ve cihazlarınızı korumaya devam edin</p>
            </div>
            
            <% if (locals.error) { %>
              <div class="alert alert-danger mb-4">
                <%= error %>
              </div>
            <% } %>
            
            <form action="/auth/login" method="POST">
              <div class="mb-3">
                <label for="email" class="form-label">E-posta Adresi</label>
                <input type="email" class="form-control" id="email" name="email" value="<%= locals.email || '' %>" required>
              </div>
              
              <div class="mb-3">
                <label for="password" class="form-label">Şifre</label>
                <input type="password" class="form-control" id="password" name="password" required>
              </div>
              
              <div class="d-flex justify-content-between mb-3">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" id="rememberMe" name="rememberMe">
                  <label class="form-check-label" for="rememberMe">
                    Beni hatırla
                  </label>
                </div>
                <a href="#" class="text-decoration-none">Şifrenizi mi unuttunuz?</a>
              </div>
              
              <div class="d-grid mb-4">
                <button type="submit" class="btn btn-primary btn-lg">Giriş Yap</button>
              </div>
            </form>
            
            <div class="text-center">
              <p class="text-muted">Veya şununla giriş yapın</p>
              <div class="d-flex justify-content-center gap-3 mb-4">
                <a href="/auth/google" class="btn btn-outline-danger">
                  <i class="fab fa-google me-2"></i> Google
                </a>
              </div>
              <p class="mb-0">
                Hesabınız yok mu? <a href="/auth/register" class="text-decoration-none">Kayıt Ol</a>
              </p>
            </div>
          </div>
        </div>
        
        <div class="text-center mt-4">
          <p class="text-muted small">
            Demo hesapları:<br>
            Normal kullanıcı: test@example.com / password123<br>
            Admin: admin@example.com / admin123
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
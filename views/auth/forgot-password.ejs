<!-- Şifremi Unuttum Sayfası -->

<section class="py-5">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <div class="card border-0 shadow-sm">
          <div class="card-body p-4 p-md-5">
            <div class="text-center mb-4">
              <img src="/img/logo.svg" alt="AntiVirüs" height="60" class="mb-3">
              <h2 class="h3">Şifremi Unuttum</h2>
              <p class="text-muted">Şifre sıfırlama talimatlarını e-posta adresinize göndereceğiz</p>
            </div>
            
            <% if (error) { %>
              <div class="alert alert-danger" role="alert">
                <i class="fas fa-exclamation-circle me-2"></i> <%= error %>
              </div>
            <% } %>
            
            <% if (success) { %>
              <div class="alert alert-success" role="alert">
                <i class="fas fa-check-circle me-2"></i> <%= success %>
                <div class="mt-3">
                  <a href="/auth/login" class="btn btn-outline-success btn-sm">
                    <i class="fas fa-sign-in-alt me-2"></i> Giriş Sayfasına Dön
                  </a>
                </div>
              </div>
            <% } else { %>
              <form action="/auth/forgot-password" method="POST">
                <div class="mb-4">
                  <label for="email" class="form-label">E-posta Adresi</label>
                  <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Hesabınıza ait e-posta adresini girin" required>
                  </div>
                  <small class="form-text text-muted mt-2">
                    <i class="fas fa-info-circle me-1"></i> Kayıt olduğunuz e-posta adresini girmeniz gerekir.
                  </small>
                </div>
                
                <div class="d-grid mb-4">
                  <button type="submit" class="btn btn-primary btn-lg">
                    <i class="fas fa-paper-plane me-2"></i> Sıfırlama Bağlantısı Gönder
                  </button>
                </div>
              </form>
            <% } %>
            
            <div class="text-center mt-3">
              <p class="mb-0">
                <a href="/auth/login" class="text-decoration-none">
                  <i class="fas fa-arrow-left me-1"></i> Giriş sayfasına dön
                </a>
              </p>
            </div>
          </div>
        </div>
        
        <div class="mt-4 text-center">
          <p class="small text-muted">
            Yardım mı lazım? <a href="/contact" class="text-decoration-none">Bizimle iletişime geçin</a>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <div class="alert alert-info" role="alert">
        <h5><i class="fas fa-info-circle me-2"></i> Demo Bilgisi</h5>
        <p class="mb-0">Bu bir demo uygulamasıdır. Gerçekte e-posta gönderimi yapılmamaktadır. Şifre sıfırlama bağlantısı gönderildi mesajı sadece simülasyon amaçlıdır.</p>
      </div>
    </div>
  </div>
</div>
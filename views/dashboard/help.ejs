  document.addEventListener('DOMContentLoaded', function() {
    // Arama işlevselliği
    const searchInput = document.getElementById('helpSearchInput');
    const searchButton = document.getElementById('helpSearchButton');
    
    function performSearch() {
      const searchTerm = searchInput.value.toLowerCase();
      if (searchTerm.length < 2) return;
      
      let foundMatch = false;
      
      // Tüm başlıkları ve içerikleri arayın
      document.querySelectorAll('.tab-pane').forEach(tabPane => {
        const content = tabPane.textContent.toLowerCase();
        if (content.includes(searchTerm)) {
          const tabId = tabPane.id;
          const tab = document.querySelector(`[href="#${tabId}"]`);
          if (tab) {
            tab.click(); // İlgili sekmeyi açın
            foundMatch = true;
            
            // İlk eşleşmeyi bulun ve vurgulayın
            const highlightMatch = () => {
              const textNodes = getTextNodesIn(tabPane);
              for (let node of textNodes) {
                const text = node.nodeValue.toLowerCase();
                const index = text.indexOf(searchTerm);
                if (index >= 0) {
                  const range = document.createRange();
                  range.setStart(node, index);
                  range.setEnd(node, index + searchTerm.length);
                  
                  window.getSelection().removeAllRanges();
                  window.getSelection().addRange(range);
                  
                  // Eşleşen elementı görünür alana kaydırın
                  const container = range.commonAncestorContainer.parentElement;
                  container.scrollIntoView({ behavior: 'smooth', block: 'center' });
                  
                  return true;
                }
              }
              return false;
            };
            
            setTimeout(highlightMatch, 100);
            return;
          }
        }
      });
      
      if (!foundMatch) {
        alert(`"${searchTerm}" ile ilgili sonuç bulunamadı.`);
      }
    }
    
    // Metin düğümlerini bulmak için yardımcı fonksiyon
    function getTextNodesIn(node) {
      const textNodes = [];
      function getTextNodes(node) {
        if (node.nodeType === 3) {
          textNodes.push(node);
        } else {
          for (let i = 0; i < node.childNodes.length; i++) {
            getTextNodes(node.childNodes[i]);
          }
        }
      }
      getTextNodes(node);
      return textNodes;
    }
    
    // Arama düğmesi ve Enter tuşu olaylarını ekleyin
    if (searchButton) {
      searchButton.addEventListener('click', performSearch);
    }
    
    if (searchInput) {
      searchInput.addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
          performSearch();
        }
      });
    }
    
    // Canlı sohbet butonu
    const liveChatButton = document.getElementById('liveChatBtn');
    if (liveChatButton) {
      liveChatButton.addEventListener('click', function() {
        alert('Canlı destek şu anda geliştirme aşamasındadır. Lütfen e-posta desteği kullanın.');
      });
    }
  });
</script>